<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ✅ Main App Theme -->
    <style name="Theme.SAPSMostWantedApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- ✅ Splash Screen Theme -->
    <style name="Theme.App.SplashScreen." parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="postSplashScreenTheme">@style/Theme.SAPSMostWantedApp</item>
    </style>

</resources>
